package Homework_0405;

import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;
import java.util.stream.Stream;

public class stream4 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner sc = new Scanner(System.in);
		
		List<Character> charList = new ArrayList <Character>();
		
		for(int i = 0; i < 10; i++) {
			System.out.println("영문자 하나를 입력하세요");
//			char [] input = sc.nextLine().toCharArray();		//입력값을 char배열로 받기
			charList.add(sc.next().charAt(i));
		}
		sc.close();
		
		
		charList.stream().map(ch -> 
							Character.isUpperCase(ch) ? Character.toLowerCase(ch) :  Character.toUpperCase(ch))
							.forEach(ch -> System.out.println(ch));
		
		//forEach는 return값 없기 때문에 Stream <Character> 없이 바로 사용.
		

		
		
		//체이닝기법
		
//		charList.stream().map(c -> {
//			if('A'<= c && c <='Z') ? c.tolowerCase() :  c.toUpperCase() ;
//			return c;
//			})
//			.forEach(c-> System.out.println(c));
		
		
		
		
		
		
		
	}

}
