package chap22_IO;

import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.PrintStream;

public class _12_printStream {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		try {
			PrintStream ps = new PrintStream(new FileOutputStream("C:/java/printStream"));
		
			byte[] byteArr = {1, 2, 3, 4, 5, 127};
			
			for(int i = 0; i < byteArr.length; i++) {
				//출력스트림에는 값을 찍어볼 수 있는 기능이 없는데
				//PrintStream/PrintWriter를 이용하면 값을 내보내기 전에 확인할 수 있다.
				//OutputStream os = new FileOutputStream();
				ps.println(byteArr[i]);
			}
			
			ps.write(byteArr);
			
			ps.flush();
			ps.close();
			
		}catch (FileNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
			
		}  catch(IOException ioe) {
			System.out.println(ioe.toString());
		} catch(Exception e) {
			System.out.println(e.toString());
		}
	}

}
