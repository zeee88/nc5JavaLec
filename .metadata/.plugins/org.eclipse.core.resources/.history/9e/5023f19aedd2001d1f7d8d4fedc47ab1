package Homework_0404;

public class IntArrUtils {
	
	
	public int getMax(int[] arr) {
		int max = arr[0];
		
		for(int i = 0; i < arr.length; i++) {
			if(arr[i] > arr[0]) {
				max = arr[i];
			}
		}
			return max;
	}
	
	public int getMin(int[] arr){
		int min = arr[0];
		
		for(int i = 0; i < arr.length; i++) {
			if(arr[i] < arr[0]) {
				min = arr[i];
			}
		}
			return min;
	}
	
	
	

}
