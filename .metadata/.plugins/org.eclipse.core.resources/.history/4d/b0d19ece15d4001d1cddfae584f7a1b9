package Homework_0405;

import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;
import java.util.stream.Stream;

public class stream4 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner sc = new Scanner(System.in);
		char [] input = sc.nextLine().toCharArray();		//입력값을 char배열로 받기
		
		List<Character> charList = new ArrayList <Character>();
		
		for(int i = 0; i < input.length; i++) {
			System.out.println("영문자 하나를 입력하세요");
			charList.add(input[i]);
		}
		
		
		Stream <Character> chStream = charList.stream();
		Stream <Character> mapStream = chStream.map(c -> {
										c.toLowerCase() ? c.tolowerCase() :  c.toUpperCase() ;
														return c;		
														});
		mapStream.forEach(m -> System.out.println(c));
		
		//forEach는 return값 없기 때문에 Stream <Character> 없이 바로 사용.
		

		
		
		
	}

}
